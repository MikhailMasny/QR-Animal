@model IEnumerable<AnimalViewModel>

@{
    ViewData["Title"] = "Profile";
}

<div>
    <h1>@User.Identity.Name</h1>
    <p class="font-weight-normal">Your animals will be displayed here.</p>
</div>

<div>
    <a asp-controller="Animal" asp-action="Create" class="btn btn-outline-success btn-sm" role="button">Add new animal</a>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">

    @foreach (var item in Model)
    {
        <div class="col mt-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Nickname</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Passport</h6>
                    <p class="card-text">@item.Features</p>
                    <a asp-controller="Animal" asp-action="Edit" asp-route-id="@item.Id" class="card-link text-warning">Edit</a>
                    <a asp-controller="Animal" asp-action="Delete" asp-route-id="@item.Id" class="card-link text-danger">Delete</a>
                </div>
            </div>
        </div>
    }

</div>
