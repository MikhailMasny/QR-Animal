@model IEnumerable<AnimalViewModel>

@{
    ViewData["Title"] = $"Profile {User.Identity.Name} - QR Animal";
}

<div class="shadow-sm p-3 bg-white rounded">
    <div>
        <h1>Hello, @User.Identity.Name!</h1>
        <p class="font-weight-normal">Your animals will be displayed here.</p>
    </div>

    <div>
        <a asp-controller="Animal" asp-action="Create" class="btn btn-outline-success btn-sm" role="button">Add new animal</a>
    </div>
</div>

@if (Model.Any())
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">

        @foreach (var item in Model)
        {
            <div class="col mt-4">
                <div class="card border-cancel">
                    <div class="card-body shadow-sm p-3 bg-white rounded">
                        <a asp-controller="Animal" asp-action="Info" asp-route-id="@item.Id" class="card-link">
                            <h5 class="card-title">@item.Nickname</h5>
                        </a>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Passport</h6>
                        <p class="card-text">@item.Features</p>
                        <a asp-controller="Animal" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Animal" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }

    </div>
}
else
{
    <div class="alert alert-success mt-4" role="alert">
        <h4 class="alert-heading">Welcome to your profile!</h4>
        <p>This section allows you to manage your profile and add animals, which you can later share thanks to the QR code.</p>
        <hr>
        <p class="mb-0">For animals to be displayed here, click on "Add new animal", fill in all the fields and add an animal.</p>
    </div>
}
