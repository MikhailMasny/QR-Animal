@model ForgotPasswordViewModel

@{
    Layout = "_Account";
}

@{
    ViewData["Title"] = "Forgot password - QR Animal";
}

<form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-account form-bg">
    <div asp-validation-summary="All" class="text-danger"></div>

    <h1 class="h3 mb-3 font-weight-normal">Password restore</h1>

    <input asp-for="Email" class="form-control" placeholder="Enter your email" required/>
    <p><span asp-validation-for="Email" class="text-danger"></span></p>

    <button type="submit" class="btn btn-lg btn-primary btn-block">Send</button>
</form>
