@model ForgotPasswordViewModel

@{
    Layout = "_Account";
}

@{
    ViewData["Title"] = Localizer["Title"];
}

<form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-account form-bg shadow-sm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Icons made by Freepik from www.flaticon.com -->
    <a asp-controller="Home" asp-action="Index"><img class="mb-4" src="~/images/logo.png" alt="Logo" width="128" height="128"></a>

    <h1 class="h3 mb-3 font-weight-normal">@Localizer["Forgot"]</h1>

    <input asp-for="Email" class="form-control" placeholder="@Localizer["Email"]" required/>
    <p><span asp-validation-for="Email" class="text-danger"></span></p>

    <button type="submit" class="btn btn-lg btn-primary btn-block">@Localizer["Send"]</button>
</form>
