@model ResetPasswordViewModel

@{
    Layout = "_Account";
}

@{
    ViewData["Title"] = Localizer["Title"];
}

<form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-account form-bg shadow-sm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Icons made by Freepik from www.flaticon.com -->
    <a asp-controller="Home" asp-action="Index"><img class="mb-4" src="~/images/logo.png" alt="Logo" width="128" height="128"></a>

    <input asp-for="UserName" type="hidden" />
    <input asp-for="Code" type="hidden" />

    <h1 class="h3 mb-3 font-weight-normal">@Localizer["ResetPassword"]</h1>

    <p><span asp-validation-for="Password" class="text-danger"></span></p>
    <p><span asp-validation-for="ConfirmPassword" class="text-danger"></span></p>

    <input id="forgotPassTopFrame" asp-for="Password" class="form-control" placeholder="@Localizer["Password"]" required/>
    <input id="forgotPassBottomFrame" asp-for="ConfirmPassword" class="form-control mb-3" placeholder="@Localizer["Confirm"]" required/>

    <button type="submit" class="btn btn-lg btn-primary btn-block">@Localizer["Reset"]</button>
</form>
