@model ErrorCodeViewModel

@{
    Layout = "_Account";
}

@{
    ViewData["Title"] = @Localizer["Title"];
}

<div class="form-account form-bg">
    <h2>@Localizer["Error"] @Model.Number</h2>
    <p>@Model.Message</p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm" role="button">@Localizer["ToIndex"]</a>
</div>
