@{
    ViewData["Title"] = "Chat - QR Animal";
}

<div class="form-group shadow-sm p-3 bg-white rounded">
    <h2 id="userInput">@User.Identity.Name</h2>
    <textarea class="form-control mb-3" id="messageInput" rows="3" placeholder="Your message"></textarea>
    <button id="sendButton" type="submit" class="btn btn-outline-success btn-lg btn-block mb-2">Send</button>
</div>

<div class="row">
    <ul id="messagesList" class="p-3"></ul>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js" asp-append-version="true"></script>
